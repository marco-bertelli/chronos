{
  "name": "chronos-jobs",
  "version": "1.0.4",
  "description": "A lightweight, persistent job scheduler for Node.js using a MongoDB backend. Supports cron syntax, delayed jobs, and human-readable intervals.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "release": "npm run build && standard-version",
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "test": "npm run mocha",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "mocha": "mocha --reporter spec -b",
    "mocha-coverage": "nyc mocha --reporter spec -b",
    "mocha-debug": "DEBUG=chronos:**,-chronos:internal:** mocha --reporter spec -b",
    "mocha-debug-internal": "DEBUG=chronos:internal:** mocha --reporter spec -b",
    "mocha-debug-all": "DEBUG=chronos:** mocha --reporter spec -b",
    "docs": "typedoc --out docs/chronos/6.x src/index.ts"
  },
  "config": {
    "blanket": {
      "pattern": "lib",
      "data-cover-never": "node_modules"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/marco-bertelli/chronos"
  },
  "homepage": "https://github.com/marco-bertelli/chronos#readme",
  "keywords": [
    "job",
    "jobs",
    "cron",
    "cronjob",
    "task",
    "schedule",
    "scheduler",
    "scheduling",
    "runner",
    "background",
    "background-jobs",
    "background-tasks",
    "persistent",
    "mongodb",
    "queue",
    "job-queue",
    "delayed",
    "recurring",
    "nodejs",
    "typescript"
  ],
  "author": "Simon Tretter, Maintained by Marco Bertelli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marco-bertelli/chronos/issues"
  },
  "dependencies": {
    "cron-parser": "^4.5.0",
    "date.js": "~0.3.3",
    "debug": "~4.3.4",
    "human-interval": "~2.0.1",
    "luxon": "^3.2.1",
    "mongodb": "^6.4.0"
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "prettier": "^2.7.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/debug": "^4.1.7",
    "@types/human-interval": "^1.0.0",
    "@types/luxon": "^3.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.3",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.6",
    "delay": "5.0.0",
    "mocha": "10.0.0",
    "mongodb-memory-server": "^9.1.6",
    "nyc": "^15.1.0",
    "sinon": "14.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  }
}